@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Movies by Genre";
}

<h1>Movies by Genre</h1>
@if (Model != null && Model.Any())
{
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Release Date</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.name</td>
                <td>@movie.DateAdded.ToShortDateString()</td>
                <td>@movie.Genre.Name</td> 
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p>No movies found for the selected genre.</p>
}
